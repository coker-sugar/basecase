/* 微信小程序使用了虚拟化节点，没有 demo-uni-row 层级 */
.uni-row {
  width: 100vw;
}
.demo-add {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 97vw;
}
.demo-add .demo-uni-col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 160rpx;
  border-bottom: 1px solid #ccc;
}
.demo-add .demo-uni-col .avater {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.demo-add .demo-uni-col h1 {
  font-size: 33rpx;
}
.demo-add .demo-uni-col .dialog {
  width: 60rpx;
  height: 60rpx;
}
.bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 70rpx;
  margin-right: 160rpx;
}
.bottom .attention {
  width: 150rpx;
  height: 60rpx;
  background: #cccccc;
  color: black;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.bottom .attentionBg {
  background-color: rgba(244, 164, 96, 0.89) !important;
}
.bottom-text {
  padding-top: 20rpx;
  font-size: 16rpx;
  color: #808080;
}