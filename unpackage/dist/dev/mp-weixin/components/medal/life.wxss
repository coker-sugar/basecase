/* 水平间距 */
.ig {
  position: fixed;
  left: 0;
  top: 0vh;
  height: 100%;
  width: 100%;
  background-color: #7b7b7b;
  z-index: -200;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.ig .line {
  width: 90vw;
  margin-top: 7vh;
  border-bottom: 2px solid #666666;
}
.ig .article {
  margin-top: 3vh;
  width: 85vw;
  height: 70vh;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
  background-color: #262626;
  border-radius: 30rpx;
}
.ig .article image {
  margin-top: 10rpx;
  width: 210rpx;
  height: 240rpx;
}