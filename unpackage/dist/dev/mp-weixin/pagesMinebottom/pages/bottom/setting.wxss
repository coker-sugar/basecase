/* 水平间距 */
.out {
  width: 100vw;
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.out .top {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin: 40rpx 0;
}
.out .title {
  text-align: center;
  font-size: 55rpx;
  margin: 30rpx 0;
  margin-bottom: 110rpx;
}
.out .anitor {
  height: 10vh;
  width: 95vw;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.out .anitor .left {
  width: 56vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.out .anitor .left .tu {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.out .anitor .left .text {
  width: 260rpx;
  height: 8vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.out .anitor .left .text .name {
  font-size: 34rpx;
}
.out .anitor .left .text .tel {
  font-size: 28rpx;
  color: #b7b7b7;
}
.out .anitor .right {
  width: 22vw;
  text-align: center;
  padding-bottom: 80rpx;
  padding-right: 20rpx;
}
.out .anitor .right .dot {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: #f5b26d;
  border-radius: 50%;
}
.out .anitor .out {
  width: 110rpx;
  height: 110rpx;
  margin-left: 20rpx;
  border-radius: 0%;
}
.out .anitor .add {
  font-size: 36rpx;
  margin-right: 54vw;
}