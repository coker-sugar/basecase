.demo-add {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 30px;
}
.demo-add .demo-uni-col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 280rpx;
}
.demo-add .demo-uni-col .avater {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.demo-add .demo-uni-col h1 {
  font-size: 33rpx;
  font-weight: 900;
}
.demo-add .demo-uni-col .friend-text {
  font-size: 25rpx;
}
.demo-add .demo-uni-col .top-right {
  position: relative;
  top: -65rpx;
  left: -80rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.demo-add .demo-uni-col .top-right .dialog {
  width: 45rpx;
  height: 45rpx;
}
